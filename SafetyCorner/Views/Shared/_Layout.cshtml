<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*<link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap.min.css" rel="stylesheet">  *@
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/reset.css")
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/ng-grid.min.css")
    @*@Styles.Render("~/Content/bootstrap.min.css")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/main.js")
    @Scripts.Render("~/Scripts/angular.min.js")
    @Scripts.Render("~/Scripts/ng-grid-2.0.7.min.js")
    @*@Scripts.Render("~/Scripts/ui-bootstrap-tpls-0.6.0.min.js")*@
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="menu-bg">
    </div>
    <!-- 左方快速連結 -->
    @{Html.RenderAction("QuickLink", "Home");}
    <!-- end 左方快速連結 -->
    <div class="main">
        @{Html.RenderAction("Menu", "Home");}
        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
